.title {
  color: #1a9bd2;
  margin-bottom: 20px;
  padding-left: 20px;
}

.index-list {
  width: 100%;
  padding: 20px;
}

.type-list-container {
  background: #1a9bd2;
}

.type-list {
  width: 100%;
  height: 60px;
  line-height: 60px;
  text-align: center;
  color: #fff;
  margin-bottom: 10px;
}

.type-list-down-hide {
  display: none;
}

.type-list-down {
  display: block;
}

.type-list-inner {
  width: 90%;
  margin: 0 auto;
  font-size: 14px;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ddd;
}
