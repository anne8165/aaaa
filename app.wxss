/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
}

/*公共样式*/

.section {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.section_title {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.flex-item {
  width: 200rpx;
  height: 300rpx;
  font-size: 26rpx;
  color: #fff;
}

.flex-item-V {
  width: 300rpx;
  height: 200rpx;
  font-size: 26rpx;
  margin: 0 auto;
}

.bc_green {
  background: green;
}

.bc_red {
  background: red;
}

.bc_blue {
  background: blue;
}
